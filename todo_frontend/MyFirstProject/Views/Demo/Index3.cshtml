
@{
    ViewBag.Title = "Index3";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup Form</title>
    <!-- Bootstrap CSS (version 3.4.1) -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        #result {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container">
        <form id="signupForm">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="userId">User ID:</label>
                <input type="text" class="form-control" id="userId" name="userId" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="form-group">
                <label for="email">Email ID:</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <button type="button" class="btn btn-primary" id="registerBtn">Register</button>
        </form>

        <div id="result"></div>
    </div>

    <!-- jQuery and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#registerBtn").click(function () {
                // Get form data
                var name = $("#name").val();
                var userId = $("#userId").val();
                var password = $("#password").val();
                var email = $("#email").val();

                // Display form data below the form
                var resultHtml = "<h4>Registration Details:</h4>";
                resultHtml += "<p><strong>Name:</strong> " + name + "</p>";
                resultHtml += "<p><strong>User ID:</strong> " + userId + "</p>";
                resultHtml += "<p><strong>Password:</strong> " + password + "</p>";
                resultHtml += "<p><strong>Email ID:</strong> " + email + "</p>";

                // Display result
                $("#result").html(resultHtml);
            });
        });
    </script>

</body>
</html>
