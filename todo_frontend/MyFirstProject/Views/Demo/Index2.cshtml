@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6" style="background-color:lavender;">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0"> addition of numbers </h3>
                    </div>

                    <div class="card-body">
                        <form id="additionform">
                            <div class="mb-3">
                                <label for="txtno1" class="form-label">number 1</label>
                                <input type="number" id="txtno1" class="form-control" required>
                            </div>

                            <div class="mb-3">
                                <label for="txtno2" class="form-label">number 2</label>
                                <input type="number" id="txtno2" class="form-control" required>
                            </div>

                            <button type="button" class="btn btn-primary" id="btnadd"> add </button>
                        </form>

                        <div class="mt-3">
                            <label for="txtres" class="form-label">result</label>
                            <input type="text" id="txtres" class="form-control readonly">
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</body>
</html>